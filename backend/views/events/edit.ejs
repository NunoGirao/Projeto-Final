<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Evento</title>
</head>
<body>
    <h1>Editar Evento</h1>
    <form action="/backoffice/events/edit/<%= event._id %>" method="POST" enctype="multipart/form-data">
        <label for="name">Nome:</label>
        <input type="text" id="name" name="name" value="<%= event.name %>" required>
        <br>
        <label for="type">Tipo:</label>
        <input type="text" id="type" name="type" value="<%= event.type %>" required>
        <br>
        <label for="subtype">Subtipo:</label>
        <input type="text" id="subtype" name="subtype" value="<%= event.subtype %>" required>
        <br>
        <label for="date">Data:</label>
        <input type="datetime-local" id="date" name="date" value="<%= event.date.toISOString().slice(0, 16) %>" required>
        <br>
        <label for="price">Preço:</label>
        <input type="number" id="price" name="price" value="<%= event.price %>" required>
        <br>
        <label for="occupation">Ocupação:</label>
        <input type="number" id="occupation" name="occupation" value="<%= event.occupation %>" required>
        <br>
        <label for="capacity">Capacidade:</label>
        <input type="number" id="capacity" name="capacity" value="<%= event.capacity %>" required>
        <br>
        <label for="place">Local:</label>
        <select id="place" name="place" required>
            <% places.forEach(place => { %>
                <option value="<%= place._id %>" <%= event.place && event.place._id.equals(place._id) ? 'selected' : '' %>><%= place.name %></option>
            <% }) %>
        </select>
        <br>
        <label for="image">Imagem:</label>
        <input type="file" id="image" name="image">
        <% if (event.image) { %>
            <p>Imagem atual: <img src="<%= event.image %>" alt="Imagem do Evento" width="200"></p>
        <% } %>
        <br>
        <button type="submit">Salvar</button>
    </form>
    <a href="/backoffice/events">Voltar para a lista de eventos</a>
</body>
</html>
